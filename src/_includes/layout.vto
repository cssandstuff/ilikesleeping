<!doctype html>
<html lang="en">
	<head>
		<title>{{ meta.siteName }} â€” {{ title }}</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Starter site for people wanting to use 11ty with Deno (and Htmx)">

		<script src="https://unpkg.com/htmx.org@latest"></script>
		<link rel="stylesheet" href="/css/style.css?" />
		{{# <link id="bundle" rel="stylesheet" href="{{ getBundleFileUrl "css" }}" data-hx-select="#bundle" data-hx-swap-oob="outerHTML"> #}}

	</head>
	<body data-hx-boost="true" data-hx-target="#content" data-hx-select="#content" data-hx-swap="outerHTML transition:true show:none">
		<h1 aria-live="polite" class="visually-hidden"  id="mainHeading" data-hx-swap-oob="innerHTML">{{ title }}</h1>
		{{ include "./_loader.vto" }}
		<div class="layout">
			<header class="header">
				<a href="/">
				<h2>Hanako Clulow</h2>
				</a>
				{{ include "./_navigation.vto" }}
			</header>
			
			<main id="main" aria-live="polite">
				<div id="content">{{ content |> safe }}</div>
			</main>
			{{ include "./_footer.vto" }}	
		</div>
		<script>{{ getBundle "js" }}</script> 
	</body>
	
	<link id="bundle" rel="stylesheet" href="{{ getBundleFileUrl "css" }}" data-hx-swap-oob="outerHTML">
	{{# <style id="styles" hx-swap-oob="outerHTML">{{ getBundle "css" }}</style> #}}
</html>

